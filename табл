#define _CRT_SECURE_NO_DEPRECATE
#define _USE_MATH_DEFINES
#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <locale.h>



void main()
{
	system("chcp 1251");

	
	int array[8][4] = {
	{ 2, 0, 0, 0},
	{ 6, 3, 0, 0},
	{ 2, 0, 0, 0},
	{ 3, 5, 2, 0},
	{ 5, 6, 0, 0},
	{ 1, 0, 0, 0},
	{ 7, 8, 5, 1},
	{ 4, 0, 0, 0} 
	};
	char c = 0;
	int number = 1;
	while (c = '3') {
		printf("выберите пункт из списка \n1)Вывод промежуточной таблицы; \n2)Вывод игроков в состав с заданными местами и заданному диапозону мест; \n3)Вывод лучшего/медианного/худшего игрока в выбранном этапе турнира. \n");
	    scanf("%c", &c);
		switch (c)
		{
		case '1':
			printf("-----------------------------------------------------------------------------------------------------\n");
			printf("|%2s|%24s|%22s|%21s|%25s|\n", "№", "1/4 Финала", "1/2 Финала", "Финал", "Победитель");
			printf("-----------------------------------------------------------------------------------------------------\n");
			for (int i = 0; i < 8; i++)
			{
				printf("Игрок %3d|", number);
				number++;
				for (int j = 0; j < 4; j++)
				{
					printf("%15d|\t", array[i][j]);
				}
				printf("\n-----------------------------------------------------------------------------------------------------\n");
			}
			break;
		case '2':
			printf("Какие метса вы хотите посмотреть?");
			break;
		case'3':
			printf("Выберите этап турнира: \n1) 1/4 Финала; \n2) 1/2 Финала \n3) Финал. \n");
			break;
			
		}
		getchar();
	}
}	
